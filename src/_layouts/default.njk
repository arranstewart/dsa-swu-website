<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport"     content="width=device-width, initial-scale=1">
    <meta content="en"        name="language" />
    <meta name="description"  content="{{ siteinfo.title }} - {{ title }}">
    <meta name="keywords"     content="{{siteinfo.keywords}}">
    <meta name="author"       content="Arran D. Stewart">
    <meta name="DC.Title"     content="{{ siteinfo.title }} - {{ title }}" />
    <meta name="DC.Creator"   content="Arran D. Stewart" />
    <meta name="DC.Format"    content="text/html" />
    <meta name="DC.Language"  content="en" />
    <meta name="DC.Subject"   content="{{ siteinfo.keywords }}" />
    <meta name='og:site_name' content='{{ siteinfo.title }}'/>
    <link rel="icon" type="image/x-icon" href="{{ '/images/favicon.ico' | url }}" >
    <link href="https://fonts.googleapis.com/css?family=Cormorant+Garamond"
          rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Cormorant+SC"
          rel="stylesheet" />
    <link rel="stylesheet" href="{{ '/css/Genericons-Neue.css' | url }}" />
    <link rel="stylesheet" href="{{ '/css/default.css?param=bogus' | url }}" />
    <link rel="stylesheet" href="{{ '/css/responsive-nav.css' | url }}" />

    <script src="{{ '/js/responsive-nav.js' | url }}" ></script>
    <script>
      window.onload = function ()  {
        var nav = responsiveNav("#mobile-nav", {
          customToggle: "#menu-toggle-btn"
        });
      };
    </script>
    <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-40672453-1', 'auto');
    ga('send', 'pageview');
    </script>

    <title>{{title}}</title>
  </head>
  <body>

  <nav id="nav" class="desktop-only" role="navigation">
    {% for link in navlinks %}
        <a href="{{ link.url | url }}">{{ link.title }}</a>
    {% endfor %}
    {% for page in collections.page %}
        <a href="{{ page.url | url }}">{{ page.data.title }}</a>
    {% endfor %}
  </nav>

  <!-- menu bar containing 'menu toggle' on mobile -->
  <div class="toggle-bar mobile-only">
    <div class="flex-bar-item">
      <button id="menu-toggle-btn" aria-label="toggle navigation menu" >
          <span class="genericons-neue-menu icon"></span>
      </button>
    </div>
  </div>
  <nav id="mobile-nav" class="nav-collapse mobile-only" role="navigation">
      {% for link in navlinks %}
          <a href="{{ link.url | url }}">{{ link.title }}</a>
      {% endfor %}
      {% for page in collections.page %}
          <a href="{{ page.url | url }}">{{ page.data.title }}</a>
      {% endfor %}
  </nav>


  <div class="non-header">
  <main class="content">

  {{ content | safe }}

  </main>
  <footer>
    <p class="copyright text-muted">© Copyright Arran D. Stewart 2017–2021</p>
  </footer>
  </div>


  </body>
</html>
